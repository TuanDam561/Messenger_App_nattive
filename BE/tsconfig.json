{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",

    "baseUrl": "./src",
    "paths": {
      "@prisma/*": ["../generated/prisma/*"],
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@dtos/*": ["dtos/*"],
      "@interfaces/*": ["interface/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@providers/*": ["providers/*"],
      "@repository/*": ["repository/*"],
      "@routers/*": ["routers/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@templates/*": ["templates/*"],
      "@utils/*": ["utils/*"],
      "@app_types/*": ["types/*"]
    }
  }
}
